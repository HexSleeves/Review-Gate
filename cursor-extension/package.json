{
  "name": "review-gate-v3",
  "displayName": "Review Gate V3",
  "description": "Advanced Review Gate system with MCP integration for Cursor IDE",
  "version": "3.0.0",
  "author": "HexSleeves",
  "publisher": "HexSleeves",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Other",
    "AI",
    "Testing",
    "Chat"
  ],
  "keywords": [
    "review",
    "gate",
    "mcp",
    "cursor",
    "feedback",
    "chat",
    "popup",
    "lakshman",
    "turlapati"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:reviewGate.openChat"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reviewGate.openChat",
        "title": "Open Review Gate v2",
        "category": "Review Gate"
      }
    ],
    "keybindings": [
      {
        "command": "reviewGate.openChat",
        "key": "cmd+shift+r",
        "mac": "cmd+shift+r",
        "win": "ctrl+shift+r",
        "linux": "ctrl+shift+r"
      }
    ]
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "vscode:prepublish": "npm run package",
    "package": "node esbuild.js --production",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,css}\""
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "4.0.0-alpha.13"
  }
}
